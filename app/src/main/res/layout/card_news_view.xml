<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="4dp"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        app:cardCornerRadius="@dimen/card_corner"
        style="@style/CardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/card_imageView"
            android:layout_width="@dimen/card_image"
            android:background="@drawable/border"
            android:src="@drawable/border"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/card_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/card_margins">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/card_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_date_size"
                android:layout_gravity="center"
                android:textColor="#c01"
                android:text="date"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/views2"/>
            <TextView
                android:id="@+id/card_tv_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/card_views_size"
                android:layout_marginLeft="3dp"
                android:textColor="#bbb"
                android:text="views"/>
            </LinearLayout>
            <TextView
                android:id="@+id/card_tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_category_size"
                android:textColor="#888"
                android:layout_gravity="right"
                android:text="category"/>
            <TextView
                android:id="@+id/card_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_title_size"
                android:textColor="#000"
                android:text="title"/>
            <TextView
                android:id="@+id/card_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_info_size"
                android:textColor="#666"
                android:text="info"/>
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>